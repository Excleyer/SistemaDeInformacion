<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
            <link rel="stylesheet" href="./styles/constancia.css">
            <link rel="stylesheet" href="./styles/ver.css">
        </head>

        <title>Document</title>
        <header class="main-header">
            <h1>Ver Paciente</h1>
            <nav>
                <ul>
                    <li><a href="/home">Agregar</a></li>
                
                </ul>
            </nav>
        </header>
     
     
   

<div class="limiter">
    <div class="container-table100">
        <div class="wrap-table100">
            <div class="table100">
                <table>
                    <thead>

                        <tr class="table100-head">
                            <th class="column">Nombres</th>
                            <th class="column">Apellidos</th>
                            <th class="column">Edad</th>
                            <th class="column">Sexo</th>
                            <th class="column" colspan="2">Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                          <% pacientes.forEach(paciente=>{ %>
                            <tr>
                    
                              <td><%=paciente.nombres%></td>
                              <td><%=paciente.apellidos%></td>
                              <td><%=paciente.edad%></td>
                              <td><%=paciente.sexo%></td>
                              <td>
                                <a href="/editarNino/<%=paciente.id%>" class="options edit">Editar</a>
                                <a href="/verPerfil/<%=paciente.id%>" class="options ver">Ver Perfil</a>
                              </td>
                              
                            </tr>
                           <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

</body>
</html>
